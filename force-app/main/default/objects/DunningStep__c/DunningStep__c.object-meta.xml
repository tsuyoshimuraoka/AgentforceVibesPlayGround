<?xml version="1.0" encoding="UTF-8" ?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Dunning Step</label>
    <pluralLabel>Dunning Steps</pluralLabel>
    <nameField>
        <label>Dunning Step</label>
        <type>AutoNumber</type>
        <displayFormat>DUN-{0000}</displayFormat>
    </nameField>
    <deploymentStatus>Deployed</deploymentStatus>
    <sharingModel>ReadWrite</sharingModel>
    <enableActivities>false</enableActivities>
    <enableReports>true</enableReports>
    <enableSearch>true</enableSearch>

    <!-- Relationships -->
    <fields>
        <fullName>Invoice__c</fullName>
        <label>Invoice</label>
        <type>Lookup</type>
        <referenceTo>Invoice__c</referenceTo>
        <required>true</required>
        <trackHistory>true</trackHistory>
    </fields>

    <!-- Sequencing -->
    <fields>
        <fullName>StepOrder__c</fullName>
        <label>Step Order</label>
        <type>Number</type>
        <precision>3</precision>
        <scale>0</scale>
        <required>true</required>
        <trackHistory>true</trackHistory>
    </fields>
    <fields>
        <fullName>WaitDays__c</fullName>
        <label>Wait Days</label>
        <type>Number</type>
        <precision>3</precision>
        <scale>0</scale>
        <required>true</required>
        <trackHistory>true</trackHistory>
        <defaultValue>3</defaultValue>
    </fields>
    <fields>
        <fullName>MaxAttempts__c</fullName>
        <label>Max Attempts</label>
        <type>Number</type>
        <precision>3</precision>
        <scale>0</scale>
        <required>true</required>
        <defaultValue>1</defaultValue>
        <trackHistory>true</trackHistory>
    </fields>

    <!-- Actions -->
    <fields>
        <fullName>EmailTemplateApiName__c</fullName>
        <label>Email Template API Name</label>
        <type>Text</type>
        <length>255</length>
        <required>false</required>
        <trackHistory>true</trackHistory>
    </fields>
    <fields>
        <fullName>PauseService__c</fullName>
        <label>Pause Service</label>
        <type>Checkbox</type>
        <defaultValue>false</defaultValue>
        <required>true</required>
        <trackHistory>true</trackHistory>
    </fields>
    <fields>
        <fullName>CancelService__c</fullName>
        <label>Cancel Service</label>
        <type>Checkbox</type>
        <defaultValue>false</defaultValue>
        <required>true</required>
        <trackHistory>true</trackHistory>
    </fields>

    <!-- Audit -->
    <fields>
        <fullName>Status__c</fullName>
        <label>Status</label>
        <type>Picklist</type>
        <required>true</required>
        <trackHistory>true</trackHistory>
        <valueSet>
            <valueSetDefinition>
                <sorted>true</sorted>
                <value><fullName>Pending</fullName><default>true</default><label
          >Pending</label></value>
                <value><fullName>Notified</fullName><default
          >false</default><label>Notified</label></value>
                <value><fullName>Completed</fullName><default
          >false</default><label>Completed</label></value>
                <value><fullName>Skipped</fullName><default
          >false</default><label>Skipped</label></value>
            </valueSetDefinition>
        </valueSet>
    </fields>
    <fields>
        <fullName>LastAttemptAt__c</fullName>
        <label>Last Attempt At</label>
        <type>DateTime</type>
        <required>false</required>
        <trackHistory>true</trackHistory>
    </fields>
    <fields>
        <fullName>Attempts__c</fullName>
        <label>Attempts</label>
        <type>Number</type>
        <precision>3</precision>
        <scale>0</scale>
        <defaultValue>0</defaultValue>
        <required>true</required>
        <trackHistory>true</trackHistory>
    </fields>

    <description
  >Dunning step execution record per invoice according to policy.</description>
</CustomObject>
