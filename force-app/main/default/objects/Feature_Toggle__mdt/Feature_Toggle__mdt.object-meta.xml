<?xml version="1.0" encoding="UTF-8" ?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Feature Toggle</label>
    <pluralLabel>Feature Toggles</pluralLabel>
    <visibility>Public</visibility>
    <deploymentStatus>Deployed</deploymentStatus>
    <description
  >Feature flags to enable/disable beta capabilities safely.</description>

    <fields>
        <fullName>Key__c</fullName>
        <label>Key</label>
        <type>Text</type>
        <length>120</length>
        <required>true</required>
        <unique>true</unique>
        <description
    >Unique key for a feature flag (e.g., PRORATION_V2)</description>
    </fields>
    <fields>
        <fullName>Enabled__c</fullName>
        <label>Enabled</label>
        <type>Checkbox</type>
        <required>true</required>
        <defaultValue>false</defaultValue>
    </fields>
    <fields>
        <fullName>Description__c</fullName>
        <label>Description</label>
        <type>TextArea</type>
        <length>255</length>
        <required>false</required>
    </fields>
</CustomObject>
