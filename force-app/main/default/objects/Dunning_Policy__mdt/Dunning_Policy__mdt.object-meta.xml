<?xml version="1.0" encoding="UTF-8" ?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Dunning Policy</label>
    <pluralLabel>Dunning Policies</pluralLabel>
    <visibility>Public</visibility>
    <deploymentStatus>Deployed</deploymentStatus>
    <description
  >Dunning policy that controls reminder intervals and stop/cancel rules.</description>
    <fields>
        <fullName>PolicyName__c</fullName>
        <label>Policy Name</label>
        <type>Text</type>
        <length>120</length>
        <required>true</required>
    </fields>
    <fields>
        <fullName>StepCount__c</fullName>
        <label>Step Count</label>
        <type>Number</type>
        <precision>2</precision>
        <scale>0</scale>
        <required>true</required>
        <defaultValue>3</defaultValue>
    </fields>
    <fields>
        <fullName>IntervalDays__c</fullName>
        <label>Interval Days</label>
        <type>Number</type>
        <precision>3</precision>
        <scale>0</scale>
        <required>true</required>
        <defaultValue>3</defaultValue>
    </fields>
    <fields>
        <fullName>StopAfterPermanentFailure__c</fullName>
        <label>Stop After Permanent Failure</label>
        <type>Checkbox</type>
        <required>true</required>
        <defaultValue>true</defaultValue>
    </fields>
</CustomObject>
